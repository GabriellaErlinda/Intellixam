{
  "functions": {
    "backend/**/*.py": {
      "runtime": "@vercel/python"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/index"
    },
    {
      "source": "/((?!api/|_next/|static/|favicon\\.ico|manifest\\.json|robots\\.txt|.*\\.\\w+).*)",
      "destination": "/index.html"
    }
  ]
}